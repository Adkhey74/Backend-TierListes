generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  role      Role
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tierLists TierList[]
  payments  Payment[]
}

enum Role {
  ADMIN
  USER
}

model Company {
  id        String   @id @default(uuid())
  name      String   @unique
  imageUrl  String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tierListItems       TierListItem[]
  mutualizedTierLists MutualizedTierList[]
}

model TierList {
  id        String         @id @default(uuid())
  userId    String
  title     String
  status    TierListStatus @default(PENDING_PAYMENT)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items   TierListItem[]
  payment Payment?
}

model TierListItem {
  id         String   @id @default(uuid())
  tierListId String
  companyId  String
  category   String // S, A, B, C, D
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tierList TierList @relation(fields: [tierListId], references: [id], onDelete: Cascade)
  company  Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

model Payment {
  id              String        @id @default(uuid())
  userId          String
  tierListId      String        @unique
  amount          Float
  stripePaymentId String
  status          PaymentStatus @default(PENDING)
  createdAt       DateTime      @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tierList TierList @relation(fields: [tierListId], references: [id], onDelete: Cascade)
}

model MutualizedTierList {
  id               String   @id @default(uuid())
  companyId        String   @unique
  averageScore     Float    @default(0)
  finalRank        String   @default("D")
  voteDistribution Json     @default("{\"S\":0,\"A\":0,\"B\":0,\"C\":0,\"D\":0}")
  lastCalculatedAt DateTime @default(now())
  pdfUrl           String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

enum TierListStatus {
  PENDING_PAYMENT
  PAID
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}
